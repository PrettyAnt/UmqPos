<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/text_black02</item>
    </style>
<!--主题样式 -->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/text_black02</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>
<!--这是登录界面输入框的style-->
    <style name="style_input">
        <item name="android:background">@drawable/log_input</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/editText_height</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:padding">8dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">@color/text_black02</item>
        <item name="android:textColorHint">@color/search_hinttext</item>
        <item name="android:textSize">@dimen/textSize_inp</item>
    </style>

    <style name="style_order_channel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/wm_shop_ok</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>
<!--这是外卖模块底部radio的风格-->
    <style name="orderfood_bottom_rb_style">
        <item name="android:drawablePadding">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32px</item>
        <!--<item name="android:textColor">@drawable/text_color_blue_black_select</item>-->
    </style>
<!--这是设置界面开关的style-->
    <style name="setting_btn_state_open_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bt_setting_switch_background_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/bt_setting_switch_text_selector</item>
        <item name="android:textSize">32px</item>
    </style>
    <!--这是设置界面开关的style-->
    <style name="setting_btn_state_close_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bt_setting_switch_background_close_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/bt_setting_switch_text_selector</item>
        <item name="android:textSize">32px</item>
    </style>
<!--这是设置界面 的关于中的item的样式-->
    <style name="setting_about_item">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawableRight">@drawable/icon_more</item>
    </style>
    <!--PopupWindow的动画样式-->
    <style name="contextMenuAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/context_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/context_anim_exit</item>
    </style>
    <style name="MyDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/mydialogbg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnterAnimation">@anim/popup_anim_in</item>
        <item name="android:windowExitAnimation">@anim/popup_anim_out</item>
    </style>
<!--dialog的效果-->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>
<!--加载的dialog的效果-->
    <style name="WhiteDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:background">@android:color/transparent</item> -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/popup_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="TransDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:background">@android:color/transparent</item> -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- my loading dialog -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="title_status_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">1px</item>
        <item name="android:paddingBottom">1px</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/title_plantform_grace_shap</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#969696</item>
        <item name="android:visibility">invisible</item>
    </style>
    <!--对话框样式的activity的风格 ffffff -->
    <style name="act_dialog_style"  parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
