<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--这是标题-->
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/et_coupon_code"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:paddingLeft="20dp"
            android:textColor="#3699EE"
            android:hint="请输入券号"
            android:textColorHint="#999999"
            android:maxLength="19"
            android:inputType="numberSigned"
            android:background="@drawable/et_shape"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/iv_coupon_scan"
            android:layout_margin="20dp"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/pos_scan"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#F5F5F5"
        />
    <include layout="@layout/uploadview" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_coupon_returnState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textColor="#3CCB28"
                android:text="交易状态"
                android:textSize="16sp"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/tv_coupon_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="交易描述"
                android:textSize="16sp"
                android:layout_margin="6dp"
                android:visibility="invisible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#D5D5D5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_coupon_exchange"
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:layout_height="wrap_content"
                    android:text="上次兑换:"
                    android:layout_margin="6dp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_coupon_num"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/tv_coupon_success"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="2dp"
                    android:text="--"
                    android:textColor="#3CCB28"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:visibility="gone">
        <Button
            android:id="@+id/bt_coupons_query_trade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_shap"
            android:text="交易查询"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        >
        <GridLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="4"
            >

            <Button
                android:id="@+id/bt_1"
                android:background="@drawable/bt_selector"
                android:text="1"
                />

            <Button
                android:id="@+id/bt_2"
                android:background="@drawable/bt_selector"
                android:text="2"
                />

            <Button
                android:id="@+id/bt_3"
                android:background="@drawable/bt_selector"
                android:text="3"
                />

            <ImageButton
                android:id="@+id/bt_clear"
                android:layout_gravity="fill"
                android:layout_rowSpan="2"
                android:background="@drawable/bt_selector"
                android:src="@drawable/clearall"
                />

            <Button
                android:id="@+id/bt_4"
                android:background="@drawable/bt_selector"
                android:text="4"
                />

            <Button
                android:id="@+id/bt_5"
                android:background="@drawable/bt_selector"
                android:text="5"
                />

            <Button
                android:id="@+id/bt_6"
                android:background="@drawable/bt_selector"
                android:text="6"
                />

            <Button
                android:id="@+id/bt_7"
                android:background="@drawable/bt_selector"
                android:text="7"
                />

            <Button
                android:id="@+id/bt_8"
                android:background="@drawable/bt_selector"
                android:text="8"
                />

            <Button
                android:id="@+id/bt_9"
                android:background="@drawable/bt_selector"
                android:text="9"
                />

            <Button
                android:id="@+id/bt_sure"
                android:layout_gravity="fill"
                android:layout_rowSpan="2"
                android:background="@drawable/bt_sure_selector"
                android:text="确认"
                android:textColor="#fff"
                />

            <Button
                android:id="@+id/bt_0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:background="@drawable/bt_selector"
                android:text="0"
                />

            <Button
                android:id="@+id/bt_clearall"
                android:background="@drawable/bt_selector"
                android:text="C"
                />
        </GridLayout>

    </RelativeLayout>


</LinearLayout>