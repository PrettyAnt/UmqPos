<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:paddingTop="14px"
    android:paddingBottom="14px"
    >

    <RadioButton
        android:id="@+id/rb_orderfood_title_today"
        android:checked="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="24px"
        android:layout_height="wrap_content"
        android:button="@null"
        android:textColor="#fff"
        android:background="@drawable/order_color_title_select"
        android:text="今日"/>

    <RadioButton
        android:id="@+id/rb_orderfood_title_yes"
        android:checked="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="24px"
        android:layout_height="wrap_content"
        android:button="@null"
        android:textColor="#fff"
        android:background="@drawable/order_color_title_select"
        android:text="昨天"/>

    <RadioButton
        android:id="@+id/rb_orderfood_title_dby"
        android:checked="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="24px"
        android:layout_height="wrap_content"
        android:button="@null"
        android:textColor="#fff"
        android:background="@drawable/order_color_title_select"
        android:text="前天"/>
</RadioGroup>