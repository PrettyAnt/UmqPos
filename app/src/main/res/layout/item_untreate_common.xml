<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="6dp"
              android:background="#FFFFFF"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_order_list_detial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/tv_untreate_viewOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#23"
                android:textColor="#f00"
                android:textSize="36px"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_untreate_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/icon_more"
                android:text="查看详情"
                android:textSize="36px"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_untreate_channelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="饿了么订单"
                android:textSize="36px"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_untreate_viewOrderId"
                android:layout_toEndOf="@+id/tv_untreate_viewOrderId"
                android:layout_marginStart="11dp"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#CCCCCC"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_order_status_paystatus"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:layout_width="@dimen/order_pic_size"
                android:layout_height="@dimen/order_pic_size"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订 单 状 态"
                            android:textSize="32px"/>

                        <TextView
                            android:id="@+id/tv_untreate_current_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="--"
                            android:textSize="32px"/>
                        <TextView
                            android:id="@+id/tv_untreate_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:textSize="32px"
                            android:visibility="invisible"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订 单 编 号"
                            android:textSize="32px"/>

                        <TextView
                            android:id="@+id/tv_untreate_orderId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="23536"
                            android:textSize="32px"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下 单 时 间"
                            android:textSize="32px"/>

                        <TextView
                            android:id="@+id/tv_untreate_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="2016-12-08 12:00"
                            android:textSize="32px"/>
                    </LinearLayout>
                </LinearLayout>

                <!--收货人信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货人信息"
                        android:textSize="32px"/>

                    <TextView
                        android:id="@+id/tv_untreate_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="李先生   13214437665\n上海市静安区延长中路81号"
                        android:textSize="32px"/>
                </LinearLayout>
                <!--发票内容-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发 票 内 容"
                        android:textSize="32px"/>

                    <TextView
                        android:id="@+id/tv_untreate_context"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="上海优方"
                        android:textSize="32px"/>
                </LinearLayout>
                <!--本单收入-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本 单 收 入"
                        android:textSize="32px"/>

                    <TextView
                        android:id="@+id/tv_untreate_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="34.00"
                        android:textSize="32px"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_untreate_payType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="20dp"
                            android:text="在线支付"
                            android:textColor="#4FC229"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_order_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/bt_wm_cancle_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/bt_wm_print_red_shap"
            android:text="取消接单"
            android:textColor="#FFF"
            />

        <Button
            android:id="@+id/bt_wm_reprint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/bt_wm_print_blue_shap"
            android:text="打印接单"
            android:textColor="#FFF"/>
    </LinearLayout>
</LinearLayout>